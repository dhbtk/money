<%= form_for(billing_account, html: {class: 'form'}) do |f| %>
    <% if billing_account.errors.any? %>
        <div id="error_explanation">
          <p>Por favor verifique os erros abaixo.</p>

          <ul>
            <% billing_account.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :name, class: 'mdl-textfield__input' %>
      <%= f.label :name, class: 'mdl-textfield__label' %>
    </div>

    <%= f.label :enabled, class: 'mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect' do %>
        <%= f.check_box :enabled, class: 'mdl-checkbox__input' %>
        <span class="mdl-checkbox__label">Habilitado</span>
    <% end %>

    <div class="actions">
      <button type="submit" class="mdl-button mdl-button--raised mdl-button--primary">Salvar</button>
    </div>

<% end %>

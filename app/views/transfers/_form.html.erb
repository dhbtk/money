<%= form_for(transfer, html: {style: 'display: flex; flex-direction: column', class: 'form'}) do |f| %>
    <% if transfer.errors.any? %>
        <div id="error_explanation">
          <h2>Não foi possível salvar a transferência:</h2>

          <ul>
            <% transfer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :value, class: 'mdl-textfield__input', data: {money: true} %>
      <%= f.label :value, class: 'mdl-textfield__label' %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.collection_select :source_account_id, current_user.accounts.where(type: nil), :id, :name %>
      <%= f.label :source_account_id, class: 'mdl-textfield__label' %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.collection_select :destination_account_id, current_user.accounts.where(type: [nil, 'CreditCard']), :id, :name %>
      <%= f.label :destination_account_id, class: 'mdl-textfield__label' %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.date_field :date, class: 'mdl-textfield__input' %>
      <%= f.label :date, class: 'mdl-textfield__label' %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :description, class: 'mdl-textfield__input' %>
      <%= f.label :description, class: 'mdl-textfield__label' %>
    </div>
<% end %>

<% content_for :toolbar_right do %>
    <button class="mdl-button mdl-js-button mdl-js-ripple-effect" onclick="document.querySelector('form.form').submit()">Salvar</button>
<% end %>

<%= form_for(transfer, html: {class: 'form'}) do |f| %>
    <% if transfer.errors.any? %>
        <div id="error_explanation">
          <h2>Não foi possível salvar a transferência:</h2>

          <ul>
            <% transfer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.number_field :value, class: 'mdl-textfield__input', min: 0, step: '0.01' %>
      <%= f.label :value, class: 'mdl-textfield__label' %>
    </div>

    <div class="mdl-selectfield mdl-js-selectfield mdl-selectfield--floating-label">
      <%= f.collection_select :source_account_id, current_user.accounts.where(type: nil), :id, :name, {}, class: 'mdl-selectfield__select' %>
      <%= f.label :source_account_id, class: 'mdl-selectfield__label' %>
    </div>

    <div class="mdl-selectfield mdl-js-selectfield mdl-selectfield--floating-label">
      <%= f.collection_select :destination_account_id, current_user.accounts.where(type: [nil, 'CreditCard']), :id, :name, {}, class: 'mdl-selectfield__select' %>
      <%= f.label :destination_account_id, class: 'mdl-selectfield__label' %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.date_field :date, class: 'mdl-textfield__input' %>
      <%= f.label :date, class: 'mdl-textfield__label' %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.text_field :description, class: 'mdl-textfield__input' %>
      <%= f.label :description, class: 'mdl-textfield__label' %>
    </div>

    <div class="actions">
      <button type="submit" class="mdl-button mdl-js-button mdl-button--primary mdl-button--raised">Salvar</button>
    </div>
<% end %>

<% content_for :toolbar_right do %>
    <button class="mdl-button mdl-js-button mdl-js-ripple-effect" onclick="document.querySelector('form.form').submit()">Salvar</button>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Recurring Debits</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Months</th>
      <th>Day</th>
      <th>Value</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recurring_debits.each do |recurring_debit| %>
      <tr>
        <td><%= recurring_debit.name %></td>
        <td><%= recurring_debit.months %></td>
        <td><%= recurring_debit.day %></td>
        <td><%= recurring_debit.value %></td>
        <td><%= recurring_debit.account %></td>
        <td><%= link_to 'Show', recurring_debit %></td>
        <td><%= link_to 'Edit', edit_recurring_debit_path(recurring_debit) %></td>
        <td><%= link_to 'Destroy', recurring_debit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<dialog class="mdl-dialog" id="pay-bill-dialog">
  <h4 class="mdl-dialog__title">Pagar Despesa</h4>
  <div class="mdl-dialog__content">
    <%= form_tag(bill_pay_path(bill), method: :post) do %>
        <div class="mdl-selectfield mdl-js-selectfield mdl-selectfield--floating-label">
          <%= select_tag :account_id, options_from_collection_for_select(current_user.accounts, :id, :name), class: 'mdl-selectfield__select' %>
          <%= label_tag :account_id, nil, class: 'mdl-selectfield__label' %>
        </div>
    <% end %>
  </div>
  <div class="mdl-dialog__actions">
    <button type="button" class="mdl-button" id="pay-bill">Pagar</button>
    <button type="button" class="mdl-button close">Fechar</button>
  </div>
</dialog>

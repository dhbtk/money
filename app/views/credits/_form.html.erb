<%= form_for(credit) do |f| %>
    <% if credit.errors.any? %>
        <div id="error_explanation">
          <h2>Erro ao salvar o gasto:</h2>

          <ul>
            <% credit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div style="display: flex">
      <div class="field" style="flex: 1">
        <%= f.text_field :value, data: {money: 'true'} %>
        <%= f.label :value %>
      </div>
      <div class="actions" style="padding-top: 15px; padding-left: 8px">
        <%= f.submit %>
      </div>
    </div>

    <div class="field">
      <%= f.date_field :date %>
      <%= f.label :date %>
    </div>

    <div class="field">
      <%= f.collection_select :account_id, current_user.accounts, :id, :name %>
      <%= f.label :account_id %>
    </div>

    <div class="field">
      <%= f.text_field :name %>
      <%= f.label :name %>
    </div>

<% end %>

<% unless credit.new_record? %>
    <h2>Ações</h2>
    <%= form_tag to_transfer_credit_path(credit), method: :post do %>
        <div class="field">
          <%= label_tag :account_id, 'Conta de Destino' %>
        </div>
        <div class="actions">
          <%= submit_tag 'Transformar em Transferência' %>
        </div>
    <% end %>
<% end %>